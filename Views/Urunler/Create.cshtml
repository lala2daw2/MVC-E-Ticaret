@model eTrade.ViewModel.UrunVM
    @{
        ViewBag.Title = "Create";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
<div class="col-lg-12">
    <h3>Ürün ekleme sayfası</h3>
    @using (Html.BeginForm("Create", "Urunler", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Urunler.Adi, new { @class = "form-control", placeholder = "Ürün Adı" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.Urunler.KategoriID, new SelectList(Model.Kategori, "ID", "KategoriAd"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.Urunler.MarkaID, new SelectList(Model.Marka, "ID", "MarkaAd"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Urunler.AlisFiyat, new { @class = "form-control", placeholder = "Alış Fiyatı" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Urunler.SatisFiyat, new { @class = "form-control", placeholder = "Satış Fiyatı" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Urunler.Aciklama, 7, 3, new { @class = "form-control", placeholder = "Ürün Hakkında Açıklama yazınız..." })
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }
</div>

