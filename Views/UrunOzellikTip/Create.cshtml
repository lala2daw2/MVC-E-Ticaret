@model eTrade.ViewModel.UrunOzellikTipVM
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <h3>Ürün Özellik Tip oluşturma sayfası</h3>
    <div id="uyari">

    </div>
    @using (Ajax.BeginForm("Create", "UrunOzellikTip", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "uyari" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Tip.Adi, new { @class = "form-control", placeholder = "Özellik Adı. Örn:RAM,HDD" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.Tip.KategoriID, new SelectList(Model.Kategoriler, "ID", "KategoriAd"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Tip.Aciklama, 7, 3, new { @class = "form-control", placeholder = "Açıklama" })
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    }

</div>

