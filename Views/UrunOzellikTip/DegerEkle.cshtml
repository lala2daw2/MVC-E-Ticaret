@model eTrade.Models.OzellikDeger
@{
    ViewBag.Title = "DegerEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <h2>Değer ekleme sayfası</h2>
    @using (Html.BeginForm("DegerEkle", "UrunOzellikTip", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Adi, new { @class = "form-control", placeholder = "Değer ekle.Örn : 8GB" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Açıklama isteğe bağlı doldur." })
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }
</div>

