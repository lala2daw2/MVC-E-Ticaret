@model eTrade.ViewModel.UrunOzellikTipVM
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <h4>@Model.Tip.Adi güncellemeye hoşgeldiniz.</h4>
    @using (Html.BeginForm("Update", "UrunOzellikTip", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Tip.Adi, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => x.Tip.KategoriID, new SelectList(Model.Kategoriler, "ID", "KategoriAd"), new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Tip.Aciklama, 7, 3, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }
</div>

