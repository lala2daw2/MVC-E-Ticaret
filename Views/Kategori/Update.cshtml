@model eTrade.ViewModel.KategoriResimVM
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <br />
    <center>
        <img class="img-circle" src="@Model.Kategori.Resimler.KucukYol" width="150" />
    </center>
    <br />
    @using (Html.BeginForm("Update", "Kategori", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.Kategori.KategoriAd, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Kategori.Aciklama, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.TextBox("txtFoto", null, new { @class = "form-control", type = "file" })
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }
</div>

