@model eTrade.Models.Kategoriler
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <h3>Yeni Kategori Oluştur</h3>
    @using (Html.BeginForm("Create", "Kategori", FormMethod.Post,new {enctype="multipart/form-data" }))
    {

        <div class="form-group">
            @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control", placeholder = "Kategori Adı" })
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Aciklama, 7, 5, new { @class = "form-control",placeholder="Açıklama" })
        </div>
        <div class="form-group">
            <label>Kategori resmi seçiniz lütfen.</label>
            @Html.TextBox("txtFoto",null,new {@class="form-control",type="file" })
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }
</div>

