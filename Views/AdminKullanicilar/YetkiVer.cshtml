@model MembershipUser
@{
    ViewBag.Title = "YetkiVer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <br />
    @using (Html.BeginForm("YetkiVer", "AdminKullanicilar", FormMethod.Post))
    {
    <div class="control-label">
        <h2>@Model.UserName.ToUpper()</h2>
    </div>
        <div class="form-group">
            <select name="roleName" class="form-control">
                @foreach (string item in ViewBag.Roles)
                {
                    <option value="@item">@item</option>
                }
            </select>
            @*@Html.DropDownList("cmbRole", ViewBag.Roles as SelectList, new { @class = "form-control" })*@
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    }

</div>

