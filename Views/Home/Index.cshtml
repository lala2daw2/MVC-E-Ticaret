@model IEnumerable<eTrade.Models.Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}




    <div class="tesla-carousel" data-tesla-plugin="carousel" data-tesla-container=".tesla-carousel-items" data-tesla-item=">div" data-tesla-autoplay="false" data-tesla-rotate="false">
        <div class="site-title">
            <div class="site-inside"><span>Öne Çıkan Ürünler</span></div>
        </div>
        <div class="row">
            <div class="tesla-carousel-items">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-xs-6">
                        <div class="product">
                            <div class="product-cover">
                                <div class="product-cover-hover"><span>
                                    @*@Html.ActionLink("Görüntüle", "UrunDetay",new {id=item.ID,name=item.Adi },new {@class="" })*@
                                    <a href="/UrunDetay/@item.Adi/@item.ID">Görüntüle</a>
                                     </span></div>
                                <img style="width:200px; height:250px;" src=" @(item.Resimlers!=null?item.Resimlers.FirstOrDefault(x=>x.Varsayilan==true).OrtaYol:"~/HomeLayout/images/photos/image-8.jpg")" alt="@item.Adi." />

                            </div>
                            <div class="product-details">
                                <h1>
                                    <a href="/UrunDetay/@item.Adi/@item.ID">@item.Adi</a>

                                </h1>
                                <p>@(item.Aciklama.Length > 50 ? Html.Raw(item.Aciklama.Substring(0, 50)) : Html.Raw(item.Aciklama))</p>
                                <div class="product-price">
                                    <a class="addCart" data-id="@item.ID"><i class="icon-257" title="Sepete ekle"></i></a>
                                    @string.Format("{0:C}", item.SatisFiyat)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


<div class="container">
    <div class="tesla-carousel" data-tesla-plugin="carousel" data-tesla-container=".tesla-carousel-items" data-tesla-item=">div" data-tesla-autoplay="false" data-tesla-rotate="false">
        <div class="site-title">
            <div class="site-inside"><span>Markalarımız</span></div>
        </div>
        <div class="row">
            <div class="tesla-carousel-items">
                @{
                    Html.RenderAction("MarkaWidget", "Home");
                }
            </div>
        </div>
    </div>
</div>




